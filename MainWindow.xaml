<Window x:Class="LinkRenameTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinkRenameTool"
        mc:Ignorable="d"
        Title="LinkRenameTool" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Background" Value="LightGray" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontSize" Value="12"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            </Style>
            <Style TargetType="StackPanel" x:Key="stack1">
                <Setter Property="Orientation" Value="Vertical" />
                <Setter Property="Height" Value="60" />
                <Setter Property="Background" Value="DarkBlue" />
                <Setter Property="Margin" Value="6"></Setter>
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            </Style>
            <Style TargetType="Label" x:Key="label1">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Background" Value="White" />
                <Setter Property="FontSize" Value="12"></Setter>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical"  Style="{StaticResource stack1}">
                <Label Content="Full Name:" Target="{Binding ElementName=textBox_path}" Style="{StaticResource label1}"/>
                <TextBox Name="textBox_path" ToolTip="Enter Path or Link (.Ink)" VerticalAlignment="Center" HorizontalAlignment="Stretch">Path</TextBox>
            </StackPanel>
            <StackPanel Style="{StaticResource stack1}" >
                <Label Content="Suche nach:" Target="{Binding ElementName=textBox_searchFor}" Style="{StaticResource label1}"/>
                <TextBox Name="textBox_searchFor" ToolTip="Enter old string eg Y:\">Suchen nach</TextBox>
            </StackPanel>
            <StackPanel Style="{StaticResource stack1}">
                <Label Content="Ersetze durch:" Target="{Binding ElementName=textBox_searchFor}" Style="{StaticResource label1}"/>
                <TextBox Name="textBox_replace" ToolTip="Enter new string">Ersetzen durch</TextBox>
            </StackPanel>        
            
            
            <CheckBox Name="checkBox_rekursiv" HorizontalAlignment="Center" IsChecked="True" Margin="6">rekursiv</CheckBox>
            <Button Click="Button_Click" Margin="6">Anwenden</Button>
        </StackPanel>
        
    </Grid>
</Window>
